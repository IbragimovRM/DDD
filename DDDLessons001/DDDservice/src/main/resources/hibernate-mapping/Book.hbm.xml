<?xml version="1.0"?>
<!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN"
        "http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd">
<hibernate-mapping default-access="field">
    <class name="ru.ddd.lessons.service.domain.model.Book" table="book"
           catalog="DDDLesson">
        <id name="id" type="java.lang.Integer">
            <column name="id"/>
            <generator class="identity"/>
        </id>
        <property name="name" type="java.lang.String">
            <column name="NAME" precision="6"/>
        </property>
        <property name="timeCreate" type="date">
            <column name="TIME_CREATE" precision="6"/>
        </property>
        <many-to-one name="bookCategory" class="ru.ddd.lessons.service.domain.model.BookCategory" fetch="select">
            <column name="book_id" not-null="true"/>
        </many-to-one>
    </class>
</hibernate-mapping>