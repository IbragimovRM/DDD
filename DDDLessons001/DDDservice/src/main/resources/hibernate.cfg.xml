<?xml version="1.0" encoding="UTF-8"?>

<!DOCTYPE hibernate-configuration PUBLIC
        "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
        "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">

<hibernate-configuration>
    <session-factory>
        <property name="current_session_context_class">thread</property>
        <mapping resource="hibernate-mapping/Stock.hbm.xml"/>
        <mapping resource="hibernate-mapping/StockDailyRecord.hbm.xml"/>
        <mapping resource="hibernate-mapping/Book.hbm.xml" />
        <mapping resource="hibernate-mapping/BookCategory.hbm.xml" />
    </session-factory>
</hibernate-configuration>